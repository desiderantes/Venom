}
programs.venom {

	sources =	venom.vala \

	packages =	gthread-2.0 \
				glib-2.0 >= 2.38.0 \
				gio-2.0 >= 2.28.0 \
				gtk+-3.0 >= 3.12.0 \
				gee-0.8 >= 0.8.0 \

	vala-packages =	glib-2.0 \
					gee-0.8 \
					gio-2.0 \
					gtk+-3.0 \

	
	gettext-domain = venom

	compile-flags = -DGETTEXT_PACKAGE=\"venom\" 

	vala-compile-flags = --pkg gio-2.0 --target-glib=2.38 --thread --enable-checking --debug --enable-experimental --verbose --fatal-warnings
	
}
